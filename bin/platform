#!/bin/bash

platform=;
uname="$(uname)";

case "${uname}" in
	MINGW*|CYGWIN*) platform='win32';;
	Linux) platform='linux';;
	Darwin) platform='darwin';;
	*) echo "Kernel name unrecognized: ${uname}" >&2; exit 127;;
esac;

if [ "${#}" -eq 0 ]; then
	echo "${platform}";
elif [ "${platform}" == "${1}" ]; then
	exit 0;
else
	exit 1;
fi;
